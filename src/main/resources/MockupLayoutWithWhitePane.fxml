<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.Controller">
    <left>
        <HBox>
            <VBox prefWidth="200" style="-fx-background-color: #2F3A47;">
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                    <ImageView fx:id="profileImage" fitHeight="50" fitWidth="50">
                        <!-- Add your profile image path here -->
                        <Image url="@path/to/profile/image.png"/>
                    </ImageView>
                    <Label text="Welcome," style="-fx-text-fill: white; -fx-font-size: 14;"/>
                    <Label text="Admin" style="-fx-text-fill: white; -fx-font-size: 18;"/>
                    <Rectangle width="160" height="2" style="-fx-fill: #A4A4A4;"/>
                </VBox>
                <VBox style="-fx-padding: 20;">
                    <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <!-- Add your home icon path here -->
                                <Image url="@path/to/home/icon.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="Products" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;"/>
                    <Button text="Sell" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;"/>
                    <Button text="User" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;"/>
                    <Button text="Admin" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;"/>
                </VBox>
                <VBox style="-fx-padding: 20; -fx-alignment: bottom-left;">
                    <Button text="Sign Out" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <!-- Add your sign-out icon path here -->
                                <Image url="@path/to/signout/icon.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </VBox>
            </VBox>
            <Pane prefWidth="2" style="-fx-background-color: white;"/>
        </HBox>
    </left>
    <center>
        <Pane/>
    </center>
</BorderPane>

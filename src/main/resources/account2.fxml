<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AccountController">
    <BorderPane>
        <top>
            <VBox>
                <HBox prefHeight="70.0" prefWidth="615.0" spacing="10" style="-fx-background-color: #f0f0f0;">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <Label fx:id="profileLabel" style="-fx-font-size: 24px;" text="Profile" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id="sellItemButton" onAction="#handleSellItem" text="Sell Item" />
                    <Button fx:id="cartButton" onAction="#handleCart" text="Cart" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <ImageView fx:id="userImageView" fitHeight="100" fitWidth="100" preserveRatio="true">
                        <!-- Ensure a valid image URL is used -->
                    </ImageView>
                    <VBox spacing="5">
                        <Label fx:id="usernameLabel" style="-fx-font-weight: bold;" text="Username" />
                        <Label fx:id="locationLabel" text="London, UK" />
                        <HBox>
                            <Label fx:id="bioLabel" />
                        </HBox>
                    </VBox>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id="editAccountButton" onAction="#handleEditAccount" text="Edit Account" />
                </HBox>
            </VBox>
        </top>
        <center>
            <VBox spacing="20">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label fx:id="recentlyListedLabel" style="-fx-font-size: 16px;" text="Recently Liked Items" />
                <ScrollPane fx:id="itemsScrollPane" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                    <HBox fx:id="itemsContainer" spacing="10">
                        <!-- Example item, repeat this structure for each item -->
                        <VBox>
                            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                                <!-- Ensure a valid image URL is used -->
                            </ImageView>
                            <Label text="Item Name" />
                            <Label text="Price" />
                        </VBox>
                        <!-- Additional items would be added here -->
                    </HBox>
                </ScrollPane>
                <Label fx:id="collectionsLabel" style="-fx-font-size: 16px;" text="Items On Sale" />
                <ScrollPane fx:id="collectionsScrollPane" fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                    <HBox fx:id="sellsContainer" spacing="10">
                        <!-- Example item, repeat this structure for each item -->
                        <VBox>
                            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                                <!-- Ensure a valid image URL is used -->
                            </ImageView>
                            <Label text="Item Name" />
                            <Label text="Price" />
                        </VBox>
                        <!-- Additional items would be added here -->
                    </HBox>
                </ScrollPane>
            </VBox>
        </center>
        <bottom>
            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #e0e0e0;">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Pane HBox.hgrow="ALWAYS" />
                <Label text="Contact us: info@myexample.com" />
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="254.0" prefWidth="255.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChangePasswordController">
    <children>
        <PasswordField fx:id="currentPasswordField" layoutX="53.0" layoutY="51.0" promptText="Current Password" />
        <PasswordField fx:id="newPasswordField" layoutX="53.0" layoutY="91.0" promptText="New Password" />
        <PasswordField fx:id="confirmNewPasswordField" layoutX="53.0" layoutY="131.0" promptText="Confirm New Password" />
      <VBox layoutX="61.0" layoutY="175.0" prefHeight="116.0" prefWidth="149.0" spacing="10">
         <children>
            <Button fx:id="changePasswordButton" onAction="#handleChangePassword" prefHeight="34.0" prefWidth="131.0" style="-fx-background-color: #2F3A47;" text="Change Password" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
             <Button fx:id="cancelButton" onAction="#handleCancel" prefHeight="34.0" prefWidth="131.0" style="-fx-background-color: #2F3A47;" text="Cancel" textFill="WHITE">
                 <font>
                     <Font name="System Bold" size="12.0" />
                 </font>
             </Button>
         </children>
      </VBox>
    </children>
</AnchorPane>

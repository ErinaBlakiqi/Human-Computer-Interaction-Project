<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.Controller">
    <!-- Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #2e2e2e; -fx-padding: 20;">
            <!-- User Section -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="profileImage" fitHeight="80" fitWidth="80" />
                <Label style="-fx-text-fill: white;" text="Welcome User" />
            </VBox>
            <VBox spacing="10">
                <Label style="-fx-text-fill: white;" text="Home" />
                <Label style="-fx-text-fill: white;" text="Products" />
                <Label style="-fx-text-fill: white;" text="Seller" />
                <Label style="-fx-text-fill: white;" text="User" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox prefWidth="362.0" spacing="20" style="-fx-padding: 20;">
            <!-- Page Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Home " />

            <!-- Best Seller Products -->
            <VBox spacing="10">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Best-Sellers" />
                <HBox alignment="CENTER" spacing="10">
                    <VBox fx:id="bestSeller1" style="-fx-border-color: black; -fx-min-width: 100; -fx-min-height: 100;" />
                    <VBox fx:id="bestSeller2" style="-fx-border-color: black; -fx-min-width: 100; -fx-min-height: 100;" />
                    <VBox fx:id="bestSeller3" style="-fx-border-color: black; -fx-min-width: 100; -fx-min-height: 100;" />
                </HBox>
            </VBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox prefHeight="100.0" prefWidth="155.0">
                  <children>
                     <Label alignment="CENTER" contentDisplay="RIGHT" text="Shitjet" textAlignment="CENTER" />
                  </children>
                  <opaqueInsets>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                  </opaqueInsets>
               </VBox>
               <VBox prefHeight="100.0" prefWidth="167.0">
                  <children>
                     <Label text="Nr. Produkteve" />
                  </children>
               </VBox>
            </children>
         </HBox>
        </VBox>
    </center>
</BorderPane>

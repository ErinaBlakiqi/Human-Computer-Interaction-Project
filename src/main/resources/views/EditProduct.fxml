<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditProductController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Edit Product" style="-fx-font-size: 24;" />
    <TextField fx:id="productNameField" promptText="Product Name" />
    <TextField fx:id="priceField" promptText="Price" />
    <TextField fx:id="quantityField" promptText="Quantity" />
    <TextField fx:id="categoryField" promptText="Category" />
    <Button text="Save" onAction="#handleSave" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="614.0" prefWidth="405.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUpController">
    <children>
        <AnchorPane layoutX="19.0" layoutY="13.0" prefHeight="587.0" prefWidth="366.0">
            <children>
                <Label layoutX="107.0" layoutY="134.0" text="Sign Up Account" textAlignment="CENTER">
                    <font>
                        <Font name="Franklin Gothic Heavy Italic" size="20.0" />
                    </font>
                </Label>
                <Button fx:id="signupButton" layoutX="52.0" layoutY="456.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="46.0" prefWidth="264.0" style="-fx-background-color: #2F3A47;" text="Sign Up" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <TextField fx:id="txtFirstname" layoutX="52.0" layoutY="174.0" prefHeight="36.0" prefWidth="264.0" promptText="Firstname" />
                <TextField fx:id="txtLastname" layoutX="51.0" layoutY="222.0" prefHeight="36.0" prefWidth="264.0" promptText="Lastname" />
                <TextField fx:id="txtUsername" layoutX="51.0" layoutY="267.0" prefHeight="36.0" prefWidth="264.0" promptText="Username" />
                <TextField fx:id="txtEmail" layoutX="51.0" layoutY="314.0" prefHeight="36.0" prefWidth="264.0" promptText="Email" />
                <PasswordField fx:id="pwdPassword" layoutX="51.0" layoutY="364.0" prefHeight="36.0" prefWidth="264.0" promptText="Password" />
                <PasswordField fx:id="pwdConfirmPassword" layoutX="52.0" layoutY="408.0" onKeyPressed="#onPressSignUp" prefHeight="36.0" prefWidth="264.0" promptText="Confirm Password" />
                <Button fx:id="loginButton" layoutX="52.0" layoutY="514.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="36.0" prefWidth="118.0" style="-fx-background-color: #2F3A47;" text="Login " textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button fx:id="cancelButton" layoutX="196.0" layoutY="514.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="36.0" prefWidth="118.0" style="-fx-background-color: #2F3A47;" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnChangeGjuhen" layoutX="140.0" layoutY="559.0" mnemonicParsing="false" onAction="#handleChange" prefHeight="24.0" prefWidth="88.0" style="-fx-background-color: #2F3A47;" text="EN | SQ" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0;">
            <ImageView>
                <Image />
            </ImageView>
            <Label text="ECommerce" style="-fx-font-size: 24px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Sign Up" />
            <Button text="Log In" />
        </HBox>
    </top>
    <center>
        <VBox spacing="20">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView>
                    <Image preserveRatio="true"/>
                </ImageView>
                <VBox>
                    <Label text="Username" style="-fx-font-weight: bold;"/>
                    <Label text="London, UK"/>
                </VBox>
            </HBox>
            <Label text="Recently Listed Items" style="-fx-font-size: 16px;"/>
            <ScrollPane fitToWidth="true" hbarPolicy="ALWAYS">
                <HBox spacing="10">
                    <!-- Repeat this for each item -->
                    <VBox>
                        <ImageView>
                            <Image />
                        </ImageView>
                        <Label text="Item Name"/>
                        <Label text="Price"/>
                    </VBox>
                </HBox>
            </ScrollPane>
            <Label text="Collections" style="-fx-font-size: 16px;"/>
            <HBox spacing="20">
                <!-- Repeat this for each collection -->
                <VBox>
                    <Label text="Collection Name"/>
                    <ImageView>
                        <Image />
                    </ImageView>
                </VBox>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #e0e0e0;">
            <Label text="Contact us: info@example.com"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox>
                <ImageView>
                    <Image />
                </ImageView>
                <ImageView>
                    <Image />
                </ImageView>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
